#include "stdafx.h"
#include <iostream>
#include"conio.h"
#include <string>

using namespace std;

void vocales (string nombre);

void main()
  {string var1;
   cout<<"Ingrese el Nombre: ";
   getline (cin, var1);
   vocales(var1);
   getch ();
  }

void vocales (string var1)
{int voc=0, lon;
lon=var1.length();
for(int i=0; i<lon; i++)
{if(var1[i]=='a' || var1[i]=='e' || var1[i]=='i' || var1[i]=='o' || var1[i]=='u')
voc++;
}
cout<<"El numero de vocales es: "<<voc;
}
